<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/styles.css"> <!-- Ensure this path is correct -->
</head>

<body class="bg-light">
    <header class="bg-primary text-white py-3">
        <div class="container">
            <h1>@ViewData["HeaderTitle"] ?? "Medication Order System"</h1>
        </div>
    </header>

    <main class="container mt-4">
        @RenderBody() <!-- Content of each view is injected here -->
    </main>

    <footer class="bg-dark text-white py-3 mt-4">
        <div class="container text-center">
            <p>&copy; 2025 Medication Order System</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false) <!-- Include optional scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
